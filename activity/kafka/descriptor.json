{
    "name": "tibco-kafkapub",
    "version": "0.0.1",
    "title": "Publish Kafka message",
    "type": "flogo:activity",
    "description": "Publish a message to a kafka topic",
    "author": "Wendell Nichols <wnichols@tibco.com>",
    "settings":[
      {
        "name": "brokerUrls",
        "type": "string"
      },
      {
        "name": "user",
        "type": "string"
      },
      {
        "name": "password",
        "type": "string"
      },
      {
        "name": "truststore",
        "type": "string"
      }
    ],
    "input":[
      {
        "name": "topic",
        "type": "string",
        "required": true
      },
      {
        "name": "message",
        "type": "string",
        "required": true
      }
    ],
    "output": [
      {
        "name": "partition",
        "type": "int"
      },
      {
        "name": "offset",
        "type": "long"
      }
    ]
  }